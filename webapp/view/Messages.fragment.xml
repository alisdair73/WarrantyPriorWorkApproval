<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<MessagePopover 
		initiallyExpanded="true"
		items="{message>/}"
	>
		 <items>
			<MessagePopoverItem 
				title="{message>message}" 
				description="{message>description}" 
				type="{message>type}"
				subtitle="{message>additionalText}"
			/>
		</items>
	</MessagePopover>
</core:FragmentDefinition>