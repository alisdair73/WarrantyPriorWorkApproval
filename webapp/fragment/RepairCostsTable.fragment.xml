<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table >
	    <items>
	    	<ColumnListItem id="requestedCosts" visible="true">
	    		<cells>
	        		<Text text="REQUESTED (100%)"/>
					<Input 
					    id="RequestedLabourHours"
						value="{
							path: 'PWA>RequestedLabourHours/value',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								maxFractionDigits: 1,
            					groupingEnabled: false,
            					groupingSeparator: ',',
            					decimalSeparator: '.'								
							}

						}"	
						type="Number"
						editable="{PWA>CanEdit}"
						change="onRequestedLabourHoursChanged"
						valueState="{= ${PWA>RequestedLabourHours/ruleResult/valid} ? 'None':'Error'}"
					/>
		        	<Input 
		        		value="{
							path: 'PWA>RequestedLabourCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
		        		editable="false"
		        		change="calculateTotalCost"/>
	    	    	<Input  
	    	    		value="{
							path: 'PWA>RequestedPartsCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
	    	    		editable="{PWA>CanEdit}"
	    	    		change="calculateTotalCost"/>
	    	    	<Input
	    	    		value="{
							path: 'PWA>RequestedSubletCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
	    	    		editable="{PWA>CanEdit}"
	    	    		change="calculateTotalCost"/>
	            	<Input
	            		value="{
							path: 'ViewHelper>/UI/requestedTotal',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
						editable="false"
	            	/>
	        	</cells>
			</ColumnListItem>
	    	<ColumnListItem id="approvedCosts" visible="{= !${PWA>CanEdit} &amp;&amp; ${PWA>CurrentVersionCategory} === 'OC' }">
	    		<cells>
	        		<Text text="APPROVED"/>
					<Input 
						value="{
							path: 'PWA>ApprovedLabourHours',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2,
            					groupingEnabled: false,
            					groupingSeparator: ',',
            					decimalSeparator: '.'								
							}
						}"	
						editable="false"/>
		        	<Input 
		        		value="{
							path: 'PWA>ApprovedLabourCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
						editable="false"/>
	    	    	<Input  
	    	    		value="{
							path: 'PWA>ApprovedPartsCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
						editable="false"/>
	    	    	<Input
	    	    		value="{
							path: 'PWA>ApprovedSubletCost',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
						editable="false"
	    	    		type="Number"/>
	            	<Input
	            		value="{
							path: 'ViewHelper>/UI/approvedTotal',
							type: 'sap.ui.model.type.Float',
							formatOptions: {
								minFractionDigits: 2,
								maxFractionDigits: 2
							}
						}"
						editable="false"/>
	        	</cells>
	    	</ColumnListItem>	        						
	    </items>
	    <columns>
	    	<Column/>
	        <Column>
	        	<header>
	            	<Label text="Labour Hours"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="Labour $"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="Parts $"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="Sublet $"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="Total $"/>
	            </header>
	        </Column>
		</columns>
	</Table>
</core:FragmentDefinition>