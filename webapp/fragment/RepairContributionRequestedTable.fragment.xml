<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table>
		<headerToolbar>
			<Toolbar>
				<Title text="Requested Repair Contribution" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<items>
	    	<ColumnListItem id="requestedContributionParts">
	        	<cells>
	            	<Text text="PARTS"/>
					<Input 
						value="{
							path: 'PWA>PartsSplitOwner',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>PartsSplitOwner} + ${PWA>PartsSplitDealer} + ${CostsHelper>PartsSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Parts Split must not exceed 100%"/>
		            <Input 
		            	value="{
							path: 'PWA>PartsSplitDealer',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>PartsSplitOwner} + ${PWA>PartsSplitDealer} + ${CostsHelper>PartsSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Parts Split must not exceed 100%"/>
		            <Input 
		            	value="{= 100 - ${PWA>PartsSplitOwner} - ${PWA>PartsSplitDealer}}"
						type="Number" editable="false" 
					/>						
	    		</cells>
	        </ColumnListItem>
	    	<ColumnListItem id="requestedContributionLabour">
	        	<cells>
	            	<Text text="LABOUR"/>
					<Input 
						value="{
							path: 'PWA>LabourSplitOwner',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>LabourSplitOwner} + ${PWA>LabourSplitDealer} + ${CostsHelper>LabourSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Labour Split must not exceed 100%"
					/>
		            <Input 
		            	value="{
							path: 'PWA>LabourSplitDealer',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>LabourSplitOwner} + ${PWA>LabourSplitDealer} + ${CostsHelper>LabourSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Labour Split must not exceed 100%"
					/>		            
	    	    	<Input 
		            	value="{= 100 - ${PWA>LabourSplitOwner} - ${PWA>LabourSplitDealer}}"
						type="Number" editable="false" 
					/>	
	    		</cells>
	        </ColumnListItem>
	    	<ColumnListItem id="requestedContributionSublet">
	        	<cells>
	            	<Text text="SUBLET"/>
					<Input 
						value="{
							path: 'PWA>SubletSplitOwner',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>SubletSplitOwner} + ${PWA>SubletSplitDealer} + ${CostsHelper>SubletSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Sublet Split must not exceed 100%"
					/>
		            <Input 
		            	value="{
							path: 'PWA>SubletSplitDealer',
							type: 'sap.ui.model.type.Integer'
						}"
						type="Number" editable="{PWA>CanEdit}" 
						valueState="{= ${PWA>SubletSplitOwner} + ${PWA>SubletSplitDealer} + ${CostsHelper>SubletSplitHonda} > 100 ? 'Error' : 'None' }"
						valueStateText="Total Sublet Split must not exceed 100%"
					/>		            
	    	    	<Input 
		            	value="{= 100 - ${PWA>SubletSplitOwner} - ${PWA>SubletSplitDealer}}"
						type="Number" editable="false" 
					/>	
	    		</cells>
	        </ColumnListItem>
		</items>
	    <columns>
	    	<Column/>
	        <Column>
	        	<header>
	            	<Label text="% Owner"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="% Dealer"/>
	            </header>
	        </Column>
	        <Column>
	        	<header>
	            	<Label text="% Honda"/>
	            </header>
	        </Column>
		</columns>
	</Table>
</core:FragmentDefinition>